@model List<ResultReservationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
    int count = 0;

}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reservations</h4>
                <p class="card-subtitle mb-4">
                    Create Delete and List
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>People
                                <th>Reservation Date</th>
                                <th>Message</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.People</td>
                                    <td>@item.ReservationDate</td>
                                    <td>@item.Message</td>
                                    <td><a asp-area="Admin" asp-controller="AdminReservation" asp-action="DeleteReservation" asp-route-id="@item.ReservationId" class="btn btn-danger">Delete</a></td>
                                </tr>

                            }


                        </tbody>
                    </table>
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
</div>
