@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Areas/Admin/Views/AdminUILayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Update Social Media</h4>
        <p class="card-subtitle mb-4">** Fill the all Blanks **</p>

        <form method="post">
            <input type="hidden" asp-for="SocialMediaId" />
            <div class="form-group">
                <label for="exampleInputName">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="exampleInputIcon">Icon</label>
                <input asp-for="Icon" class="form-control" placeholder="Icon">
            </div>
            <div class="form-group">
                <label for="exampleInputUrl">Url</label>
                <input asp-for="Url" class="form-control" placeholder="Url">
            </div>


            <button type="submit" class="btn btn-primary waves-effect waves-light">Update Social Media</button>
        </form>

    </div> <!-- end card-body-->
</div>
