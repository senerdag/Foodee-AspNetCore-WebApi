@model List<ResultEventDto>



<div id="fh5co-events" data-section="events" style="background-image: url(images/slide_2.jpg);" data-stellar-background-ratio="0.5">
	<div class="fh5co-overlay"></div>
	<div class="container">
		<div class="row text-center fh5co-heading row-padded">
			<div class="col-md-8 col-md-offset-2 to-animate">
				<h2 class="heading">Upcoming Events</h2>
				@await Component.InvokeAsync("_DescriptionComponentPartial", new { id = 4 })
			</div>
		</div>
		<div class="row">
			@foreach(var item in Model)
			{
				<div class="col-md-4">
					<div class="fh5co-event to-animate-2">
						<h3>@item.Title</h3>
						<span class="fh5co-event-meta">@item.EventDate.ToShortDateString()</span>
						<p>@item.Description</p>
						<p><a href="#" class="btn btn-primary btn-outline">Read More</a></p>
					</div>
				</div>
			}
		</div>
	</div>
</div>