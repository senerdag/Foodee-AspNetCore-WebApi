@model CreateReservationDto


<div id="fh5co-contact" data-section="reservation">
	<div class="container">
		<div class="row text-center fh5co-heading row-padded">
			<div class="col-md-8 col-md-offset-2">
				<h2 class="heading to-animate">Reserve a Table</h2>
				@await Component.InvokeAsync("_DescriptionComponentPartial", new { id = 5 })
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 to-animate-2">
				<h3>Contact Info</h3>
				<ul class="fh5co-contact-info">
					@await Component.InvokeAsync("_ContactComponentPartial")
				</ul>
			</div>
			
			<div class="col-md-6 to-animate-2">

				<h3>Reservation Form</h3>
				<form method="post" action="/Reservation/SendReservation">
                    
					<div class="form-group">
						<label for="name" class="sr-only">Name</label>
						<input asp-for="Name" id="name" class="form-control" placeholder="Name" type="text">
						
					</div>
					<div class="form-group ">
						<label for="email" class="sr-only">Email</label>
						<input asp-for="Email" id="email" class="form-control" placeholder="Email" type="email">
						

					</div>
					<div class="form-group">
						<label for="occation">Select People</label>
						<select asp-for="People"  class="form-control" id="occation">
							<option>1</option>
							<option>2</option>
							<option>3</option>
							<option>4</option>
						</select>
					</div>
					<div class="form-group ">
						<label for="date" class="sr-only">Date</label>
						<input  asp-for="ReservationDate" class="form-control"  type="datetime-local">
						
					</div>



					<div class="form-group ">
						<label for="message" class="sr-only">Message</label>
						<textarea  asp-for="Message" cols="30" rows="5" class="form-control" placeholder="Message"></textarea>
						
					</div>
					<div class="form-group ">
						<input class="btn btn-primary" value="Send Message" type="submit">
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

